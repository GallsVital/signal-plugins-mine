{
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"lib": ["ES7", "es2020"],
		"allowJs": true,
		"checkJs": true,
		"composite": true,
		"incremental": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
		//"declaration": true,
		//"declarationMap": true,
		"outDir": "dist",
		//"noEmit": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"disableSizeLimit": true, // Plugin images being base64 breaks Typescript checking in the project. 20mb filesize limit by default
		"baseUrl": ".",
		"paths": {
			"@Mock/*": ["tests/*"],
			"@Types/*":["types/*"],
			//"performance": ["./types/performance.d.ts"]
		},
	},
	"files": [
		"./types/globals.d.ts",
		"./types/device.d.ts",
		"./types/console.d.ts",
		"./types/bus.d.ts",
		"./types/battery.d.ts",
		"./types/Exports.d.ts",
		"./types/ComponentChannel.d.ts",
		"./types/ControllableParameters.d.ts",
		"./types/performance.d.ts", // Can be removed in QT6
		"./types/NanoLeaf.d.ts",
		"./types/PhilipsHue.d.ts",

    ],
	"include": ["CodeSnippets/**/*","Non-Release-Plugins/**/*", "Plugins/**/*"],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"docs",
		"**/docs/*",
		"**/*.test.js"
	]
}