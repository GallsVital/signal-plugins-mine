{
    "tags": {
        "allowUnknownTags": true
    },
    "mode": "typescript",
    "source": {
        "include": ["./Protocols/ModernCorsairProtocol.js", "./Plugins/Logitech/Logitech_Wireless_Mouse_Dongle.js"],
        "exclude": ["./node_modules", "./docs"],
        "includePattern": "\\.(jsx|js|ts|tsx|d.ts)$"
    },
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/category",
        "node_modules/better-docs/typedef-import"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": false,
        "verbose": true,
        "template": "./node_modules/better-docs",
        "access": "all"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true,
        "default": {
            "staticFiles": {
            }
        },
        "better-docs": {
            "name": "SignalRGB Plugins",
            "logo": "images/logo.png",
            "title": "SignalRGB Plugins Documentation",
            "css": "style.css",
            "trackingCode": "",
            "hideGenerator": false,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://gitlab.com/signalrgb/signal-plugins"
                }
            ]
        }
    }
}
